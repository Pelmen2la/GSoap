doctype html
html(ng-app='gsoapAdminApp')
    head
        meta(charset='utf-8')
        title GoodSoap Admin
        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='css/admin.css')
        link(rel='stylesheet', href='/bower_components/angular-ui-select/dist/select.css')
        link(rel='stylesheet', href='/bower_components/textAngular/dist/textAngular.css')
        link(rel='stylesheet', href='/bower_components/components-font-awesome/css/font-awesome.min.css')
    body
        div.admin-main-container
            div#auth
                span #{user}
                a(href='/logout') Выйти
            button(class='top-menu-button' ui-sref='index') Товары
                span.icon
            button(class='top-menu-button' ui-sref='brands') Бренды
                span.icon
            button(class='top-menu-button' ui-sref='buttonFilters') Фильтры
                span.icon
            button(class='top-menu-button' ui-sref='orders') Заказы
                span.icon
            button(class='top-menu-button' ui-sref='promocodes') Промокоды
                span.icon

            div(ui-view, ng-controller='AdminMainController')


        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/angular/angular.js')
        script(src='/bower_components/angular-resource/angular-resource.js')
        script(src='/bower_components/angular-ui-router/release/angular-ui-router.js')
        script(src='/bower_components/angular-file-upload/dist/angular-file-upload.js')
        script(src='/bower_components/angular-cookies/angular-cookies.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/bower_components/textAngular/dist/textAngular-rangy.min.js')
        script(src='/bower_components/textAngular/dist/textAngular-sanitize.min.js')
        script(src='/bower_components/textAngular/dist/textAngular.min.js')
        script(src='/bower_components/angular-ui-select/dist/select.js')
        script(src='/js/adminapp.js')
        script(src='/js/controllers/admin/adminmain.js')
        script(src='/js/controllers/admin/adminproductlist.js')
        script(src='/js/controllers/admin/productform.js')
        script(src='/js/controllers/admin/adminbrandlist.js')
        script(src='/js/controllers/admin/brandform.js')
        script(src='/js/controllers/admin/buttonfilterlist.js')
        script(src='/js/controllers/admin/buttonfilterform.js')
        script(src='/js/controllers/admin/orderlist.js')
        script(src='/js/controllers/admin/orderform.js')
