extends mainproductlist.pug

block aboveproductslist
  .carousel-wrapper
    ul.image.carousel(rn-carousel='', rn-carousel-index='carouselIndex', rn-carousel-controls-allow-loop='', rn-carousel-buffered='', rn-carousel-controls='', rn-carousel-auto-slide='5', rn-carousel-pause-on-hover='')
      li(ng-repeat='image in carouselImages')
        img(ng-src='{{image}}')
  ul.advantages-panel
    li
      img.cart-image(src='/resources/images/icons/car.png')
      p
        b Бесплатная доставка
        br
        |                 по РФ от 2500 руб.
    li
      img.cart-image(src='/resources/images/icons/wallet.png')
      p
        b Без суммы
        br
        |                 минимального заказа
    li
      img.cart-image(src='/resources/images/icons/wheelbarrow.png')
      p
        b Быстрая отгрузка
        br
        |                 вашего заказа
    li
      img.cart-image(src='/resources/images/icons/certificate.png')
      p
        b Гарантия качества
        br
        |                 всех товаров


block underproductslist
